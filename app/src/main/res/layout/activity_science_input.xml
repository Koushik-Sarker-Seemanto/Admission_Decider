<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".input.ScienceInput">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:inputType="numberDecimal"
                android:layout_width="250dp"
                android:gravity="left"
                android:layout_height="35dp"
                android:text="SSC GPA"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/ssc_gpa"
                android:inputType="numberDecimal"
                android:background="@drawable/button_background2"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="35dp"
                android:hint="Enter SSC GPA"
                />
            <TextView
                android:inputType="numberDecimal"
                android:layout_width="250dp"
                android:gravity="left"
                android:layout_height="35dp"
                android:text="HSC GPA"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/hsc_gpa"
                android:inputType="numberDecimal"
                android:background="@drawable/button_background2"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="35dp"
                android:hint="Enter HSC Gpa"
                />
            <TextView
                android:inputType="numberDecimal"
                android:layout_width="250dp"
                android:gravity="left"
                android:layout_height="35dp"
                android:text="Individual HSC GPA"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/bangla"
                android:inputType="numberDecimal"
                android:background="@drawable/button_background2"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="35dp"
                android:hint="Enter Bangla Gpa"
                />

            <EditText
                android:id="@+id/english"
                android:inputType="numberDecimal"
                android:background="@drawable/button_background2"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="35dp"
                android:hint="Enter English Gpa"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/ict"
                android:inputType="numberDecimal"
                android:background="@drawable/button_background2"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="35dp"
                android:hint="Enter ICT Gpa"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/physics"
                android:inputType="numberDecimal"
                android:background="@drawable/button_background2"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="35dp"
                android:hint="Enter Physics Gpa"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/chemistry"
                android:inputType="numberDecimal"
                android:background="@drawable/button_background2"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="35dp"
                android:hint="Enter Chemistry Gpa"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/highermath"
                android:inputType="numberDecimal"
                android:background="@drawable/button_background2"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="35dp"
                android:hint="Enter Higher Math Gpa"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/biology"
                android:inputType="numberDecimal"
                android:background="@drawable/button_background2"
                android:layout_width="250dp"
                android:gravity="center"
                android:layout_height="35dp"
                android:hint="Enter Biology Gpa"
                android:layout_marginTop="20dp"
                />

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:text="Submit"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                />

        </LinearLayout>

    </ScrollView>


</LinearLayout>